{
  "compilerOptions": {
    "rootDir": "./src",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": ".",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false
  },
  "include": [
    "src/**/*",
    "src/_utils/cbor-encode.js",
    "src/_utils/cbor-decode.js",
    "src/_utils/calculate_recovery_id.js"
  ],
  "exclude": ["node_modules"]
}
