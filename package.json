    "prepublishOnly": "npm run build && npm run minify && npm run mocha",
    "build": "tsc",
    "minify": "node ./minify.js"
  },
  "devDependencies": {
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "chai": "^5.1.2",
    "esbuild": "^0.24.2",
    "eslint": "^8.34.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "mocha": "^11.0.1",
    "prettier": "^2.8.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
